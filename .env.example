# Runtime
NODE_ENV=production
PORT=3000
APP_BASE_URL=https://access-scan.com
NEXT_PUBLIC_GA_ID=
AUTH_SECRET=replace-with-long-random-string
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# PostgreSQL
DATABASE_URL=postgresql://accessible_scan:change-me@127.0.0.1:5432/accessible_scan?schema=public

# Scan settings
SCAN_MAX_PAGES_DEFAULT=10
SCAN_MAX_PAGES_LIMIT=20
SCAN_CONCURRENCY=2
SCAN_PAGE_TIMEOUT_MS=30000
SCAN_STALE_AFTER_MS=900000
SCAN_JOB_CONCURRENCY=1
SCAN_QUEUE_MAX=20
SCAN_MAX_VIOLATIONS_PER_PAGE=200
SCAN_MAX_NODES_PER_VIOLATION=50

# API rate limit (POST /api/scans)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=5

# Logging
LOG_LEVEL=info

# Optional (future auth integration)
# SUPABASE_AUTH_ENABLED=false
# SUPABASE_URL=
# SUPABASE_ANON_KEY=
