# Runtime
NODE_ENV=production
PORT=3000
APP_BASE_URL=https://access-scan.com

# SQLite (place DB outside public app directory)
DATABASE_URL=file:/srv/accessible-scan-data/app.db

# Scan settings
SCAN_MAX_PAGES_DEFAULT=10
SCAN_MAX_PAGES_LIMIT=20
SCAN_CONCURRENCY=2
SCAN_PAGE_TIMEOUT_MS=30000
SCAN_STALE_AFTER_MS=900000

# API rate limit (POST /api/scans)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=5

# Logging
LOG_LEVEL=info

# Optional (future auth integration)
# SUPABASE_AUTH_ENABLED=false
# SUPABASE_URL=
# SUPABASE_ANON_KEY=
