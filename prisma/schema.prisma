generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Scan {
  id                Int        @id @default(autoincrement())
  publicId          String     @unique
  inputUrl          String
  normalizedRootUrl String
  status            String     @default("queued")
  maxPages          Int
  startedAt         DateTime?
  finishedAt        DateTime?
  errorMessage      String?
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  pages             ScanPage[]
}

model ScanPage {
  id            Int            @id @default(autoincrement())
  scanId        Int
  url           String
  normalizedUrl String
  orderIndex    Int
  status        String         @default("queued")
  httpStatus    Int?
  errorCode     String?
  errorMessage  String?
  startedAt     DateTime?
  finishedAt    DateTime?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  scan       Scan           @relation(fields: [scanId], references: [id], onDelete: Cascade)
  violations AxeViolation[]

  @@index([scanId, orderIndex])
}

model AxeViolation {
  id          Int      @id @default(autoincrement())
  scanPageId  Int
  ruleId      String
  impact      String?
  description String
  help        String
  helpUrl     String
  tagsJson    String
  nodeCount   Int
  nodesJson   String
  createdAt   DateTime @default(now())

  scanPage ScanPage @relation(fields: [scanPageId], references: [id], onDelete: Cascade)

  @@index([scanPageId])
}
